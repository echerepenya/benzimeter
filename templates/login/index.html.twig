{% extends 'base.html.twig' %}

{% block title %}Авторизация{% endblock %}

{% block custom_css %}
    <link href="{{ asset('css/login.css') }}" rel="stylesheet">
{% endblock %}


{% block body %}
    <div class="container-fluid text-center">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <main class="form-signin">
            <img class="mb-4" src=" {{ asset('images/fuelling_station.png') }}" alt="" width="50%" height="50%">
            <h1 class="h3 mb-3 fw-normal">
                {% if 'now'|date("H") > 5 and 'now'|date("H") <= 10 %} Доброе утро
                {% elseif 'now'|date("H") > 10 and 'now'|date("H") <= 18 %} Добрый день
                {% elseif 'now'|date("H") > 18 and 'now'|date("H") <= 23 %} Добрый вечер
                {% elseif 'now'|date("H") > 23 and 'now'|date("H") <= 5 %} Доброй ночи
                {% else %} Здравствуйте
                {% endif %}
            </h1>
            
            <form action="{{ path('login') }}" method="post">
                <div class="form-floating">
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"/>
                    <label for="username">Email:</label>
                </div>

                <div class="form-floating">
                    <input class="form-control" type="password" id="password" name="_password"/>
                    <label for="password">Password:</label>
                </div>

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" value="remember-me"> Запомнить
                    </label>
                </div>

                {# Если вы хотите контролировать URL, по которому перенаправляется пользователь при успешном входе
                <input type="hidden" name="_target_path" value="/account"/> #}

                <button class="w-100 btn btn-lg btn-primary" type="submit">Войти</button>
                <p class="mt-5 mb-3 text-muted">&copy; 2022</p>
            </form>
        </main>
    </div>
{% endblock %}
