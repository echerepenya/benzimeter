{% extends 'layout.html.twig' %}

{% block title %} Автомобиль {% endblock %}

{% block content %}

    {% if cars is defined %}
        <div class="row">
            
                {% for car in cars %}
                    <div class="col-sm-4">
                        <div class="card m-3" style="width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title">{{ car.brand }}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">{{ car.model}}</h6>
                                <p class="card-text">{{ car.regNumber }}</p>
                                <a href="#" class="card-link">Редактировать</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            
        </div>
    {% endif %}

    {% if form is defined %} {{ form(form) }} {% endif %}

    {% if message is defined %} {{ message }} {% endif %}

    {% if add_button is defined %}
        <p>
            <a href="{{ path('add_car') }}" class="btn btn-primary">Добавить автомобиль</a>
        </p>
    {% endif %}

{% endblock %}
