{% extends 'layout.html.twig' %}

{% block title %} {% if title is defined %} {{ title }} {% endif %} {% endblock %}

{% block content %}

    {% if message is defined %} {{ message }} {% endif %}

    {% if tasks is defined %}
        <ul>
        {% for task in tasks %}
            <li>{{ task.task }} - {{ task.dueDate|date('Y-m-d') }}</li>
        {% endfor %}
        </ul>
    {% endif %}

    {% if form is defined %} {{ form(form) }} {% endif %}

{% endblock %}
